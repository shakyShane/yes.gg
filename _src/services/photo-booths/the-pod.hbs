{{inc src="hero.hbs" service=$$.services.booths-the-pod}}
{{inc src="breadcrumbs.hbs" items=page.breadcrumbs currentPage=$$.services.booths-the-pod.title}}

<section class="wrapper detail" id="{{page.gallery}}">
    <div class="container">

        <div id="demo-test-gallery" class="detail__gallery gallery" data-pswp-uid="1">

            <p class="gallery__hint">Click to zoom</p>

            {{#imgs src="dir:public/content/photo-booths/the-pod/gallery" rel="public"}}
                <a class="gallery__link" href="{{this.large.src}}"
                   data-width="{{this.large.width}}" data-height="{{this.large.height}}">
                    <img src="{{this.thumb.src}}" alt="">
                    <figure></figure>
                </a>
            {{/imgs}}

        </div>
        <div class="detail__content">
            <h2>{{{$$.services.booths-the-pod.title}}}</h2>
            <p class="lede">{{{$$.services.booths-the-pod.desc}}}</p>
            <p>
                <a data-scroll href="#{{page.features}}" class="button button--alt">Prices and Features</a>
                <a data-scroll href="#{{page.faq}}" class="button button--alt">FAQ</a>
            </p>
        </div>

    </div>
</section>

{{inc src="features.hbs" feature=$$.services.booths-the-pod id=page.features}}

