---
description: >
    Mini-pod, for kids parties
cta: true
features: mini-pod-features
breadcrumbs:
    - label: Home
      url: /
    - label: Services
      url: /services
    - label: Photo Booths
      url: /services/photo-booths
---

{{inc src="hero.hbs" service=$$.booths-mini-pod}}
{{inc src="breadcrumbs.hbs" items=page.breadcrumbs currentPage=$$.booths-mini-pod.title}}

<section class="wrapper detail">
    <div class="container">
        <div class="detail__img">
            <img src="/content/choice-03.jpg" alt="">
        </div>
        <div class="detail__content">
            <h2>{{{$$.booths-mini-pod.title}}}</h2>
            <p class="lede">{{{$$.booths-mini-pod.desc}}}</p>
            <p>
                <a data-scroll href="#{{page.features}}" class="button button--alt">Prices and Features</a>
            </p>
        </div>
    </div>
</section>

<section class="wrapper upsell" id="mini-pod-features">
    <div class="container">

        <h1 class="page-title">2 Childrens Booths available</h1>

        <div class="cards cards--feature-list cards--feature-list--two-up" id="the-pod-features">
            <div class="card">
                <p class="card__title">{{$$.booths-mini-pod-01.title}}</p>
                <ul class="card__feature-list">
                    {{#each $$.booths-mini-pod-01.features}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
                <div class="card__cta card__cta--bottom">
                    <p class="card__price">
                        <strong>Price: £{{$$.booths-mini-pod-01.price.value}}.00</strong>
                    </p>
                    <a href="{{$$.nav.book.url}}" class="button">Book Now</a>
                </div>
            </div>
            <div class="card">
                <p class="card__title">{{$$.booths-mini-pod-02.title}}</p>
                <ul class="card__feature-list">
                    {{#each $$.booths-mini-pod-02.features}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
                <div class="card__cta card__cta--bottom">
                    <p class="card__price">
                        <strong>Price: £{{$$.booths-mini-pod-02.price.value}}.00</strong>
                    </p>
                    <a href="{{$$.nav.book.url}}" class="button">Book Now</a>
                </div>
            </div>
        </div>
    </div>
</section>
