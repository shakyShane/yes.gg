<section class="wrapper hero-list">
    <div class="container">
        <h1 hidden="">{{$$.site.title}}</h1>
        <article class="hero hero--loading">
            <section class="hero__img" hero-src="/content/hero-01.jpg" hero-src-large="/content/hero-01.jpg">
                <section class="hero__content">
                    <h2 class="hero__title">{{$$.site.title}}</h2>
                    <p class="hero__summary">We’re an entertainments company with a difference we don’t just do events we create event solutions
                        especially for you, whatever you need we can accommodate you</p>
                    <div class="hero__cta">
                        <a href="/services" class="button" ui-please-wait>Our Services</a>
                        <a href="/contact" class="button button--trans" ui-please-wait>Get In Touch</a>
                    </div>
                </section>
            </section>
            <div class="loader"></div>
        </article>
    </div>
</section>

<section class="wrapper quick-nav">
    <div class="container">
        <div class="quick-nav__items">
            {{#each $$.services}}
            <a href="{{this.url}}" class="quick-nav__item">
                <span class="quick-nav__item__icon quick-nav__item__icon--{{this.icon}}">{{inc src="icon.hbs" icon=this.icon}}</span>
                <span class="quick-nav__item__title">{{this.title}}</span>
            </a>
            {{/each}}
        </div>
    </div>
</section>

