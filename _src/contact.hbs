<div class="wrapper forms upsell" id="book">
    <div class="container">

        <h2 class="card-title">Send us a message...</h2>
        <p class="card-description">Tell us about your event, and which services you're interested in - then we'll get back to you ASAP with availability details.</p>

        <form netlify class="validate-form">

            <input type="hidden" name="_next" value="/thanks" />
            <input type="hidden" name="_subject" value="Submission from the yes.gg website!" />
            <input type="text"   name="_gotcha" style="display:none" />

            <div class="contact-form">
                <div class="field">
                    <label class="label" for="name">Full Name</label>
                    <input class="input input--text" type="text" id="name" name="Name:" required>
                </div>
                <div class="field">
                    <label class="label" for="email">Email Address:</label>
                    <input class="input input--text" type="email" id="email" name="_replyto" required>
                </div>
                <div class="field">
                    <label class="label" for="phone">Telephone Number:</label>
                    <input class="input input--text" type="text" id="phone" name="Telephone:">
                </div>
                <div class="field">
                    <label class="label" for="date">Event Date?</label>
                    <input class="input" type="date" name="date" id="date" size="40">
                </div>
            </div>

            <div class="booking-form" id="contact-form">
                <div id="app-container">

                </div>
            </div>

            <div class="contact-form">
                <div class="field">
                    <label class="label" for="message">Additional information?</label>
                    <textarea class="input input--text" name="Message:" id="message" cols="30" rows="5"></textarea>
                </div>
            </div>


            <div class="form-actions">
                <p class="error-msg">There are some problems with the form, please check above</p>
                <p class="form-actions__help"></p>
                <button class="button" type="submit">Submit</button>
            </div>

        </form>
    </div>
</div>


